<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.main.MainActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="374dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/the_magicians" />

            <Button
                android:id="@+id/buttonReg"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginStart="115dp"
                android:layout_marginTop="-100dp"
                android:backgroundTint="#43DED0"
                android:text="Смотреть"
                app:cornerRadius="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginTop="50dp"
                android:text="В тренде"
                android:textColor="@color/cyan"
                android:textSize="22sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="110dp"
                    android:layout_height="180dp"
                    android:layout_marginStart="-10dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/lucifer" />

                <ImageView
                    android:id="@+id/imageViewTwo"
                    android:layout_width="110dp"
                    android:layout_height="180dp"
                    android:layout_marginStart="5dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sex_education" />

                <ImageView
                    android:id="@+id/imageViewThree"
                    android:layout_width="110dp"
                    android:layout_height="180dp"
                    android:layout_marginStart="5dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/got" />
                <ImageView
                    android:id="@+id/imageViewFive"
                    android:layout_width="110dp"
                    android:layout_height="180dp"
                    android:layout_marginStart="5dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/the_withcer" />
            </LinearLayout>

            <TextView
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginTop="-30dp"
                android:text="Новое"
                android:textColor="@color/cyan"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="235dp"
                    android:layout_height="175dp"
                    android:layout_marginStart="0dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/i3" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="235dp"
                    android:layout_height="175dp"
                    android:layout_marginStart="10dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/walking_dead" />
            </LinearLayout>

            <TextView
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginTop="-30dp"
                android:text="Для вас"
                android:textColor="@color/cyan"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="110dp"
                    android:layout_height="180dp"
                    android:layout_marginStart="-10dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/westworld" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="110dp"
                    android:layout_height="180dp"
                    android:layout_marginStart="5dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/jessica" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="110dp"
                    android:layout_height="180dp"
                    android:layout_marginStart="5dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/lucifer" />
                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="110dp"
                    android:layout_height="180dp"
                    android:layout_marginStart="5dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/the_withcer" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>