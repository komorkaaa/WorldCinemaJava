<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.signup.SignUpActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="149dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="247dp"
        android:layout_height="160dp"
        app:srcCompat="@drawable/text"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="82dp"
        tools:layout_editor_absoluteY="41dp" />

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="343dp"
        android:layout_height="45dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="230dp"
        android:background="@drawable/edittext_grey_border"
        android:ems="10"
        android:hint="    Имя"
        android:inputType="textPersonName"
        android:textColorHint="#AFAFAF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextSurname"
        android:layout_width="343dp"
        android:layout_height="45dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="290dp"
        android:background="@drawable/edittext_grey_border"
        android:ems="10"
        android:hint="    Фамилия"
        android:inputType="textPersonName"
        android:textColorHint="#AFAFAF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextEmailAddress"
        android:layout_width="343dp"
        android:layout_height="45dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="350dp"
        android:background="@drawable/edittext_grey_border"
        android:ems="10"
        android:hint="    E-mail"
        android:inputType="textEmailAddress"
        android:textColorHint="#AFAFAF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="343dp"
        android:layout_height="45dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="410dp"
        android:background="@drawable/edittext_grey_border"
        android:ems="10"
        android:hint="    Пароль"
        android:inputType="textPassword"
        android:textColorHint="#AFAFAF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextConfirmPassword"
        android:layout_width="343dp"
        android:layout_height="45dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="470dp"
        android:background="@drawable/edittext_grey_border"
        android:ems="10"
        android:hint="    Повторите пароль"
        android:inputType="textPassword"
        android:textColorHint="#AFAFAF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonReg"
        android:layout_width="343dp"
        android:layout_height="52dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="540dp"
        android:backgroundTint="#43DED0"
        android:text="Зарегистрироваться"
        app:cornerRadius="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonHaveAccount"
        android:layout_width="343dp"
        android:layout_height="52dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edittext_border"
        android:text="У меня уже есть аккаунт"
        android:textColor="#43DED0"
        app:backgroundTint="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonReg" />


</androidx.constraintlayout.widget.ConstraintLayout>